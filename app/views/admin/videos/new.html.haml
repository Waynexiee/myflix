%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
        = form_for [:admin, @video], html: { class: "form-horizontal" } do |f|
          %ul.nav.nav-tabs
            %li.active
              %h2 Add a New Video
          %br
          %fieldset
            .form-group
              =f.label :title, "Title", class: "control-label col-sm-3"
              .col-sm-3
                =f.text_field :title, class: "form-control", type: "text"
            .form-group
              =f.label :category, "Category", class: "control-label col-sm-3"
              .col-sm-6
                =f.select :category_id, options_for_select(Category.all.map {|category| [category.name, category.id]}), class: "form-control"
            .form-group
              =f.label :description, "Description", class: "control-label col-sm-3"
              .col-sm-6
                =f.text_area :description, row: 8, class: "span6"
            .form-group
              =f.label :larger_cover_url, "Large cover", class: "control-label col-sm-3"
              .col-sm-3
                =f.file_field :larger_cover_url, class: "form-control"
            .form-group
              =f.label :smaller_cover_url, "Small cover", class: "control-label col-sm-3"
              .col-sm-3
                =f.file_field :smaller_cover_url, class: "form-control"
            .form-group
              =f.label :video_url, "Video_url", class: "control-label col-sm-3"
              .col-sm-3
                =f.text_field :video_url, class: "form-control", type: "text"
          %fieldset.actions.form-group
            .col-sm-6.col-md-offset-3
              %input(type="submit" value="Add Video" class="btn btn-default")
