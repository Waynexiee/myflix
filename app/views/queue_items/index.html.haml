%section.my_queue.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %h2 My Queue
        %table.table
          %thead
            %tr
              %th(width="10%") List Order
              %th(width="30%") Video Title
              %th(width="10%") Play
              %th(width="20%") Rating
              %th(width="15%") Genre
              %th(width="15%") Remove
          %tbody
            - @queue_items.each do |queue_item|
              %tr
                %td
                  %input.form-control(type="text" value="#{queue_item.order}")
                %td
                  = link_to queue_item.video_title, queue_item.video
                %td
                  = button_to "Play", nil, class: "btn btn-default"
                %td
                  %select.form-group(name="")
                    %option{value: nil, selected: queue_item.video_score.nil?}
                    %option{value: "5", selected: queue_item.video_score == 5} 5 Stars
                    %option{value: "4", selected: queue_item.video_score == 4} 4 Stars
                    %option{value: "3", selected: queue_item.video_score == 3} 3 Stars
                    %option{value: "2", selected: queue_item.video_score == 2} 2 Stars
                    %option{value: "1", selected: queue_item.video_score == 1} 1 Star
                %td
                  = link_to queue_item.video_category
                %td
                  = link_to my_queue_path(order: queue_item.order, user_id: queue_item.user.id), method: :delete do
                    %i.glyphicon.glyphicon-remove

        = button_to "Update Instant Queue", nil, class: "btn btn-default"
