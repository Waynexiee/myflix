%section#top-header.row
  %h1.col-md-2
    = link_to "MyFLiX", videos_path
  - if logged_in?
    %ul.col-md-5.clearfix
      %li= link_to "Videos", videos_path
      %li= link_to "My Queue", my_queue_path
      %li= link_to "People", people_path
      %li= link_to "Advanced Search", advanced_search_videos_path
    =form_tag search_videos_path, method: :get, class:"col-md-4 navbar-form" do
      .form-group
        %input.form-control(name="search" type="text" placeholder="Search for videos here")
      %button.btn.btn-default(type="submit") Search
    #user_links.pull-right
      %ul
        %li.dropdown
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            Welcome, #{current_user.name}
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              %a(href="#{user_path(current_user)}") Account
              %a=link_to "Sign Out", logout_path, method: "delete"
