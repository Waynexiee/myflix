%section.invite.container
  .row
    .col-sm-10.col-sm-offset-1
      =form_tag(invitations_path, class: 'invite') do
        =hidden_field_tag :invite_email, @user.email
        %header
          %h1 Invite a friend to join MyFlix!
        %fieldset
          .form-group
            =label_tag :name, "Friend's Name"
            .row
              .col-sm-4
                =text_filed_tag :name, nil, class: "form-control"
          .form-group
            =label_tag :email, "Friend's Email Address"
            .row
              .col-sm-4
                =text_filed_tag :email, nil, class: "form-control", type: "email"
          .form-group
            =label_tag :message, "Invitation Message"
            .row
              .col-sm-6
                =text_area_tag :message, "Please join this really cool site!", rows: 6
        %fieldset.form-group.action
          %input(type="submit" value="Send Invitation" class="btn btn-default")
